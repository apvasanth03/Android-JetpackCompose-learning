<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vasanth.jetpackcomposelearning">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackComposeLearning">
        <activity
            android:name=".ui.features.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.features.basics.ComposeBasicsActivity"
            android:exported="false"
            android:label="@string/title_activity_compose_basics"
            android:theme="@style/Theme.JetpackComposeLearning" />
        <activity
            android:name=".ui.features.layout.BasicLayoutsActivity"
            android:exported="false"
            android:label="@string/my_soothe"
            android:theme="@style/Theme.MySoothe" />
        <activity
            android:name=".ui.features.state.StateActivity"
            android:exported="false"
            android:label="@string/basic_state"
            android:theme="@style/Theme.JetpackComposeLearning" />
    </application>

</manifest>